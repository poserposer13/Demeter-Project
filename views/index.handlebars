<body>

    <main class="container-fluid">

        <!-- Head with title, calander and current time. -->
        <header class="jumbotron">
            <h1 class="display-3">Management Dashboard</h1>
            <div class="date&time" style="display: flex; justify-content: center;">
                <p id="currentDay" class="lead" style="display: inline-block; margin-right: 20px;"></p>
                <p id="currentTime" class="lead" style="display: inline-block;"></p>
            </div>
            <p id="currentDay" class="lead"></p>
            <p id="currentDay" class="lead"></p>
        </header>

        <!-- Employee Icon -->
        <section class="row">
            <div class="col-md-4">
                <figure class="overlay">
                    <a href="/employee"><img id="employee" class="icons"
                            src="/public/icons/employee-working-icon-vector-20994542.jpg" alt="employee management"
                            height="300px" width="100%"></a>
                    <div class="textCenter">
                        <div class="text">Manage Employees</div>
                    </div>
                </figure>
            </div>

            <!-- Revenue Icon -->
            <div class="col-md-4">
                <figure class="overlay">
                    <a href="/finances"><img id="revenue" class="icons" src="/public/icons/Revenue icon.jpg"
                            alt="employee management" height="300px" width="100%"></a>
                    <div class="textCenter">
                        <div class="text">Revenue</div>
                    </div>
                </figure>
            </div>

            <!-- Department Icon -->
            <div class="col-md-4">
                <figure class="overlay">
                    <a href="/department"><img id="revenue" class="icons" src="/public/icons/department.jpg"
                            alt="employee management" height="300px" width="100%"></a>
                    <div class="textCenter">
                        <div class="text">View By Department</div>
                    </div>
                </figure>
            </div>
        </section>

    </main>


    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
        integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV"
        crossorigin="anonymous"></script>
    {{!-- Current Date and Time. --}}
    <script>
        const todaysDate = new Date(); $('#currentDay').text(todaysDate.toLocaleString('default', { month: 'long' }) + " " + todaysDate.getDate() + ", " + todaysDate.getUTCFullYear()); $('#currentTime').text(todaysDate.toLocaleString('en-US', { hour: 'numeric', minute: 'numeric', hour12: true }))
    </script>
